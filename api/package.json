        "@types/mongoose": "^5.11.97",
        "@types/morgan": "^1.9.3",
        "@types/passport": "^1.0.7",
        "@types/passport-local": "^1.0.34",
        "nodemon": "^2.0.15",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.14.1",
        "tscpaths": "^0.0.9",
        "tslint": "^6.1.3",
        "typescript": "^4.6.3"
